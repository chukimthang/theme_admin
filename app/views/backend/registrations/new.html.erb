<div class="container sessions-wrapper">
  <div class="col-md-4 col-md-offset-4 login-box-body">
    <h3 class="login-box-msg">Sign Up</h3>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <div class="form-group has-feedback">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email" %>
        <span class="fa fa-envelope-o form-control-feedback"></span>
        <%= show_errors resource, :email %>
      </div>

      <div class="form-group has-feedback">
        <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Password" %>
        <span class="fa fa-lock form-control-feedback"></span>
        <%= show_errors resource, :password %>
      </div>

      <div class="form-group has-feedback">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Password Confirmation" %>
        <span class="fa fa-lock form-control-feedback"></span>
        <%= show_errors resource, :password_confirmation %>
      </div>

      <%= f.fields_for :profile do |ff| %>
        <div class="form-group has-feedback">
          <%= ff.text_field :full_name, autofocus: true, class: "form-control", placeholder: "Full Name" %>
          <span class="fa fa-text-width form-control-feedback"></span>
          <%= show_errors resource.profile, :full_name %>
        </div>
      <% end %>

      <div class="row">
        <div class="col-xs-4">
          <%= f.submit "Sign Up", class: "btn btn-primary btn-block btn-flat" %>
        </div>
      </div>
    <% end %>

    <div class="clearfix"></div>

    <div align="center">
      <%= render "backend/shared/links" %>
    </div>
  </div>
</div>
