<div class="container sessions-wrapper">
  <div class="col-md-4 col-md-offset-4 login-box-body">
    <h3 class="login-box-msg">Change Password</h3>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group has-feedback">
        <%= f.password_field :password, autofocus: true, placeholder: 'New password', class: 'form-control' %>
        <span class="fa fa-lock form-control-feedback"></span>
      </div>
      <%= show_errors resource, :password %>

      <div class="form-group has-feedback">
        <%= f.password_field :password_confirmation, autofocus: true, placeholder: 'Password confirmation', class: 'form-control' %>
        <span class="fa fa-lock form-control-feedback"></span>
      </div>
      <%= show_errors resource, :password_confirmation %>

      <div class="row col-xs-4">
        <%= f.submit 'Update', class: 'btn btn-primary btn-block btn-flat' %>
      </div>
    <% end %>

    <div class="clearfix"></div>

    <div align="center">
      <%= render 'devise/shared/links' %>
    </div>
  </div>
</div>
