<!DOCTYPE html>
<html>
  <head>
    <title>Backend</title>
    
    <%= csrf_meta_tags %>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Table | Propeller - Admin Dashboard">
    <meta content="width=device-width, initial-scale=1, user-scalable=no" name="viewport">
    
    <%= stylesheet_link_tag "backend", media: "all", "data-turbolinks-track": "reload" %>
    <%= javascript_include_tag "backend", "data-turbolinks-track": "reload" %>
  </head>

  <body>
    <%= render partial: "layouts/backend/nav" %>
    <%= render partial: "layouts/backend/sidebar" %>
    <%= yield %>
    <%= render partial: "layouts/backend/footer" %>

    <script>
      $(document).ready(function() {
        var sPath=window.location.pathname;
        var sPage = sPath.substring(sPath.lastIndexOf('/') + 1);
        $(".pmd-sidebar-nav").each(function(){
          $(this).find("a[href='"+sPage+"']").parents(".dropdown").addClass("open");
          $(this).find("a[href='"+sPage+"']").parents(".dropdown").find('.dropdown-menu').css("display", "block");
          $(this).find("a[href='"+sPage+"']").parents(".dropdown").find('a.dropdown-toggle').addClass("active");
          $(this).find("a[href='"+sPage+"']").addClass("active");
        });
        $(".auto-update-year").html(new Date().getFullYear());
      });
    </script> 
  </body>
</html>
